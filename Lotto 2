<script>
// Atalhos
function $(id){ return document.getElementById(id); }
function random(min,max){ return Math.floor(Math.random()*(max-min+1))+min; }

// ÁUDIO – som de tambor com Web Audio
let audioCtx = null;
function playDrumHit(){
  try {
    if (!audioCtx) {
      audioCtx = new (window.AudioContext || window.webkitAudioContext)();
    }
    const osc = audioCtx.createOscillator();
    const gain = audioCtx.createGain();

    osc.type = "sine";
    osc.frequency.setValueAtTime(120, audioCtx.currentTime);

    gain.gain.setValueAtTime(0.8, audioCtx.currentTime);
    gain.gain.exponentialRampToValueAtTime(0.001, audioCtx.currentTime + 0.25);

    osc.connect(gain);
    gain.connect(audioCtx.destination);

    osc.start();
    osc.stop(audioCtx.currentTime + 0.25);
  } catch(e){
    // se não conseguir tocar som (bloqueio do navegador), só ignora
  }
}

// "segundo" / "segundos"
const duracaoInput = $("duracao");
const duracaoUnidade = $("duracao-unidade");

function atualizarUnidade(){
  const v = parseInt(duracaoInput.value,10);
  duracaoUnidade.textContent = v === 1 ? "segundo" : "segundos";
}
duracaoInput.addEventListener("input", atualizarUnidade);
atualizarUnidade();

// animação com latinhas + tremida + som
function animateSpinShake(duration){
  const drum = $("drum");
  drum.innerHTML = "";
  drum.classList.add("shake");

  const interval = setInterval(()=>{
    const c = document.createElement("div");
    c.className = "spin-can";

    const w = drum.clientWidth  || 300;
    const h = drum.clientHeight || 190;

    c.style.left = random(10, w-70) + "px";
    c.style.top  = random(5,  h-110) + "px";

    c.textContent = random(1,99);

    const hi = document.createElement("span");
    hi.className = "can-highlight";
    c.appendChild(hi);

    drum.appendChild(c);
    playDrumHit();

    setTimeout(()=> c.remove(), 260);
  }, 80);

  return new Promise(resolve=>{
    setTimeout(()=>{
      clearInterval(interval);
      drum.classList.remove("shake");
      drum.innerHTML = "";
      resolve();
    }, duration * 1000);
  });
}

// clique em Sortear
$("btn-sortear").onclick = async () => {
  const min = parseInt($("min").value,10);
  const max = parseInt($("max").value,10);
  const qtd = parseInt($("qtd").value,10);
  const dur = parseInt(duracaoInput.value,10);

  if (isNaN(min) || isNaN(max) || isNaN(qtd) || isNaN(dur)) {
    alert("Preencha todos os campos corretamente.");
    return;
  }
  if (min >= max) {
    alert("O valor mínimo deve ser menor que o valor máximo.");
    return;
  }
  if (qtd < 1 || qtd > 10) {
    alert("A quantidade de bolas deve ser entre 1 e 10.");
    return;
  }
  if (dur < 1 || dur > 15) {
    alert("A duração da animação deve ser entre 1 e 15 segundos.");
    return;
  }
  if ((max - min + 1) < qtd) {
    alert("O intervalo é menor que a quantidade de bolas.");
    return;
  }

  await animateSpinShake(dur);

  const usados = new Set();
  const nums = [];
  while (nums.length < qtd) {
    const n = random(min,max);
    if (!usados.has(n)) {
      usados.add(n);
      nums.push(n);
    }
  }
  nums.sort((a,b)=>a-b);

  const drum = $("drum");
  nums.forEach(n=>{
    const can = document.createElement("div");
    can.className = "final-can";
    can.textContent = n;

    const hi = document.createElement("span");
    hi.className = "can-highlight";
    can.appendChild(hi);

    drum.appendChild(can);
  });
};

// clique em Limpar
$("btn-limpar").onclick = () => {
  $("drum").innerHTML = "";
};
</script>

</body>
